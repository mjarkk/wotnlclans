*
  border 0px
  margin 0px
  padding 0px

body
  font-size 18px
  background-color #27214b
  color white
  font-family 'Open Sans', sans-serif
  overflow-x hidden
  overflow-y scroll

.list
  padding 20px
  .title
    padding 30px 0px 20px 0px
    h2
      font-size 50px
      font-weight 700
  .filters
    padding 0px 0px 20px 0px
    .filterOnList
      margin-top 10px
      button 
        margin-top 10px
  .actualData
    padding 0px 0px 80px 0px
    .loading
      font-size 33px
      font-weight bold
      color rgba(255,255,255,0.2)
      display flex
      justify-content center
      align-items center
      max-width 700px
      padding 0px 20px
    .row
      padding 10px 5px
      max-width 700px
      border-radius 13px
      display grid
      grid-template-columns 50px 40px 40px 130px 130px 130px 130px 40px
      grid-template-rows 25px 25px 25px 25px
      background-color #27214b
      transition 0.2s background-color
      .position
        font-weight bold
        grid-column 1 / 2
        grid-row 1 / 5
        justify-self center
        place-self center
      .icon
        grid-column 2 / 4
        grid-row 1 / 5
        justify-self center
        place-self center
        padding 5px
        border-radius 10px
        background-color #1c032a
        overflow hidden
        .holder
          height 60px
          width 60px
      .tag
        grid-column 4
        grid-row 1 / 3
        justify-self center
        place-self center
        font-size 25px
        font-weight bold
      .rating
        justify-self center
        place-self center
        display flex
        justify-content center
        align-items flex-start
        flex-direction column
        min-width: 90px
        span:nth-child(1)
          font-size 17px
          color #8e8a8a
          line-height 0.7
        span:nth-child(2)
          font-size 19px
          font-weight bold
          color white
          display inline-block
          padding-top 3px
      .clanEfficiency
        grid-column 5
        grid-row 1 / 3
      .clanRating
        grid-column 6
        grid-row 1 / 3
      .winrate
        grid-column 7
        grid-row 1 / 3
      .global
        grid-column 7
        grid-row 3 / 5
      .stronghold
        grid-column 4
        grid-row 3 / 5
      .members
        grid-column 5
        grid-row 3 / 5
      .battles
        grid-column 6
        grid-row 3 / 5
      .moreinfo
        grid-column 8
        grid-row 1 / 5
        display flex
        justify-content center
        align-items center
        span 
          transition 0.2s opacity
          opacity 0
          height 40px
          width 40px
          cursor pointer
          svg
            fill white
      &:hover
        background-color #1c032a
        .moreinfo span
          opacity 0.7
    @media screen and (max-width: 750px)
      .row
        grid-template-columns 50px 40px 40px 110px 110px 110px 110px
        .moreinfo
          display: none
          grid-column 1
          grid-row 1
    @media screen and (max-width: 625px)
      .row
        grid-template-columns 30px 40px 40px 110px 110px 110px
        .battles, .members
          display none
          grid-column 1
          grid-row 1
        .winrate
          grid-column 5
          grid-row 3 / 5
        .global
          grid-column 6
          grid-row 3 / 5
    @media screen and (max-width: 470px)
      .row
        grid-template-columns 30px 40px 40px 90px 90px 90px
        .tag
          font-size 20px
          place-self center start
    @media screen and (max-width: 400px)
      .row
        grid-template-columns 30px 0px 0px 90px 90px 90px
        .icon
          display none
          grid-column 1
          grid-row 1

@media screen and (max-width: 470px)
  .list
    padding: 5px;

.header
  position fixed
  bottom 0px
  left 0px
  width 100%
  z-index 3
  border-radius 17px 17px 0px 0px
  background-color #0d0222
  .top
    padding 10px 20px 20px 20px
    overflow-x auto
    overflow-y hidden
    max-height: 33px;
    &::-webkit-scrollbar
      display none
    .fullscreenCenter
      display flex
      flex-wrap nowrap
      margin 0px auto
    button
      padding 5px 5px 7px 5px
      width 150px
      font-size 25px
      border 0px solid black
      background-color #3d2b7e
      color white
      &.blue
        // background-color #46727d
        &.selected, &:hover
          background-color #72cee5
      &.green
        // background-color #2f7b52
        &.selected, &:hover
          background-color #33eb88
      &.yellow
        // background-color #818030
        &.selected, &:hover
          background-color #e5e33e
      &.red
        // background-color #712d2f
        &.selected, &:hover
          background-color #e0454a
  .promo
    height 80px
    transition height 0.3s
    will-change height
    .promoInner
      box-sizing border-box
      height 80px
      padding 10px 20px
      p, h1
        position relative
        top -20px
        text-align center
      h1
        min-height 40px
        font-size 40px
      p
        min-height 10px
        font-size 18px
      a
        font-weight bold
        text-decoration none
        color #a30acc
      @media screen and (max-width: 410px)
        h1
          font-size 31px
        p
          font-size 15px
  .promo.hidden
    height 0px

button
  cursor pointer
  padding 4px 15px
  margin 0px 5px
  font-size 18px
  font-weight bold
  border 2px solid #5f0acc
  border-radius 12px
  transition background-color 0.2s
  &.dark
    color white
  &.outline
    background-color rgba(95,10,204,0)
    &:hover
      background-color rgba(95,10,204,0.6)
  &.selected
    background-color rgba(95,10,204,0.7)
    &:hover
      background-color rgba(95,10,204,1)
  &.dark:disabled
    background-color rgba(0,0,0,1)
    cursor not-allowed
    color rgb(138, 138, 138)
    border 2px solid #4c1c8a

.login
  position fixed
  top 0px
  left 0px
  height 100vh
  width 100vw
  z-index 0
  display none
.login.show
  background-color rgba(0,0,0,0.5)
  z-index 1
  display flex
  justify-content center
  align-items center
  .contents
    width 100%
    max-width 400px
    text-align center
    
.clanStatsContainer
  position fixed
  bottom 0px
  left 0px
  width 100vw
  height 100vh
  background-color white
  transform scale(0.98) translate(0px, 100vh)
  border-radius 10px
  transition transform 0.2s
  &.show
    border-radius 0px
    transform scale(1) translate(0px, 0vh)

.clanDetials
  height 100%
  width 100%
  overflow hidden
  display block
  z-index 4
  color black
  .clanDetialsInner
    height 100%
    width 100%
    overflow-y scroll
    overflow-x hidden
  .actionBar
    display flex
    justify-content space-between
    align-items center
    height 70px
    border-bottom 2px solid #eee
    .back
      padding 10px
      height 50px
      width 50px
      cursor pointer
    .isSponsor
      margin-right 24px
      font-size 20px
      font-weight bold
      background-color #d012a9
      color white
      border-radius 40px
      box-shadow 0px 3px 33px -6px rgba(0,0,0,0.3)
      padding 3px 20px 5px 20px
  .icon
    display flex
    justify-content center
    align-items center
    padding 10px
    img
      padding 5px
      background-color #1c032a
      height 200px
      width 200px
      border-radius 35px
      box-shadow 0px 12px 77px -20px rgba(0,0,0,0.53)
  h1, h3
    text-align center
  .stats
    display flex
    justify-content center
    align-items center
    flex-wrap wrap
    padding 20px
    .block
      padding 5px
      display flex
      justify-content center
      align-items center
      flex-direction column
      .propertyName
        color #161616
    .one
      .value
        background-color #eee
        display inline-block
        padding 0px 12px
        border-radius 4px
        font-weight 600
    .multiple
      .values
        background-color #eee
        display flex
        flex-wrap nowrap
        border-radius 4px
        overflow hidden
        .value, .what
          display inline-block
        .value
          padding 0px 9px 0px 3px
          font-weight 600
        .what
          padding 0px 3px 0px 9px
          background-color #cae3ff
  .discription
    padding 20px

.graphAndStats 
  position fixed
  top 20px
  right 20px
  width calc(100vw - 780px)
  height calc(100vh - 200px)
  background-color white
  overflow hidden
  border-radius 13px
  .graph
    background-color white
    height 100%
    width 100%
    color rgba(0,0,0,0.3)
    display flex
    justify-content center
    align-items center
  .clanDetials
    background-color white
    height 100%
    width 100%
    position relative
    left 100%
    transform translateX(0%) translateY(-100%)
    transition transform 0.3s
  .show
    transform translateX(-100%) translateY(-100%)
    
.inputWrapper
  color white
  background-color rgba(95,10,204,0)
  border-radius 12px
  transition background-color 0.2s
  cursor text
  border 2px solid #5f0acc
  max-width 200px
  display flex
  justify-content flex-start
  align-items center
  flex-direction row
  box-sizing border-box
  input
    background-color rgba(0,0,0,0)
    font-size 19px
    min-width 100%
    color white
    padding 5px 35px 5px 12px
    border-radius 12px
    box-sizing border-box
  .isvg
    width 20px
    height 20px
  svg
    position relative
    left -30px
    width 20px
    height 20px
    fill white
    box-sizing border-box

.settings
  padding 20px
  padding-bottom: 60px
  .fields
    display flex
    justify-content flex-start
    flex-wrap wrap

.community, .settings
  h2
    font-size 50px
    font-weight 700

.community
  padding-bottom 100px
  h2
    padding 20px 20px 0px 20px
  .about
    padding 0px 20px 20px 20px
  .commingSoon 
    margin 20px
    font-size 22px
    display inline-block
    padding 3px 15px 5px 15px
    border 3px solid #b04ebf
    background-color #6a2175 
    color white
    border-radius 10px
    transform scale(1)
    transition transform 0.2s
    &:hover
      transform scale(1.01)
  .fullscreen
    position fixed
    display flex
    justify-content center
    align-items center
    overflow hidden
    height 100vh
    width 100vw
    top 0px
    left 0px
    z-index 5
    background-color rgba(0,0,0,0.2)
    .center
      display flex
      flex-direction column
      margin 5px
      border-radius 10px
      height 100%
      width 100%
      box-sizing border-box
      background-color white
      max-width 600px
      max-height 600px
      color black
      .titlebar
        height 50px
        border-bottom 3px solid #eee
        display flex
        justify-content flex-start
        align-items center
        cursor pointer
        *
          cursor pointer
        p
          font-size 26px
        svg
          position relative
          top 4px
          height 40px
      .markdownPart
        height 100%
        overflow-x hidden
        overflow-y scroll
        padding 10px 20px
        code
          background-color #e5e5e5
          display inline-block
          padding 2px 7px
          border-radius 5px
          border 1px solid #ccc
  .floatingElements
    display flex
    flex-direction row
    flex-wrap wrap
    padding 0px 20px 20px 0px
    .floating
      box-shadow 0px 5px 30px -10px rgba(0,0,0,0.6)
      margin 20px 0px 0px 20px
      height 240px
      width 100%
      max-width 380px
      border-radius 20px
      overflow hidden
      transform scale(1)
      transition transform 0.2s
      &:hover
        transform scale(1.01)
      &.discordBot
        background-color #ef4c4f
      &.discordServer
        background-color #4cefd1
      &.facebookCommunity
        background-color #4c4fef
      .back
        height 100%
        width 100%
        h1, h2
          padding 0px
          font-weight 700
          font-style italic
          opacity 0.1
          color black
          position relative
        h1
          font-size 250px
          top -65px
          left -85px
        h2
          font-size 160px
          line-height 0.8
          top -15px
          left -45px

      .frond
        position relative
        top -100%
        height 100%
        width 100%
        padding 15px
        box-sizing border-box
        display flex
        flex-direction column
        .btns
          display flex
          justify-content space-between
          .infoBtn
            display inline-block
            cursor pointer
            svg
              height 40px
              fill white
              position relative
              top 4px
              transform scale(1)
              transition transform 0.2s, fill 0.1s
              &:hover
                transform scale(1.2)
                fill #6700ff
        p, a
          font-weight bold
          display inline-block
        p
          height 100%
          font-size 35px
          color rgb(240,240,240)
          span
            color #fff
            font-size 38px
        a
          background-color #27214b
          font-size 25px
          cursor pointer
          color white
          padding 4px 25px 6px 25px
          -webkit-user-select none       
          -moz-user-select none
          -ms-user-select none
          user-select none
          border-radius 8px
          box-shadow 0px 3px 40px -5px rgba(0,0,0,0.5)
          text-decoration none
          transition background-color 0.2s
          &:hover
            background-color #6700ff
      @media screen and (max-width: 450px)
        .frond
          p
            font-size 28px
        .back
          h1
            font-size 196px
            top -29px
            left -78px

.settingsBlock
  max-width 500px
  width 100%
  padding 10px
  .discription
    padding-bottom 10px
  .error
    color #ef5350
    padding 7px
  .listEdit
    display flex
    flex-wrap wrap
  .listEdit, .rawEdit
    padding 20px 7px
    textarea
      padding 7px
      border-radius 6px
      font-size 14px
      resize horizontal
    .textItem
      width 178px
      padding 5px 5px 5px 0px
      display flex
      flex-wrap nowrap      
      .icon
        padding-left 3px
        height 30px
        svg
          height 30px
          fill #ffffff
          transition fill 0.2s
          cursor pointer
      .add:hover svg
        fill #43ff7e
      .remove:hover svg
        fill #fe5b5b
      .disabled svg
        fill gray
      textarea
        resize none
